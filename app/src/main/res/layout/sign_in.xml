					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:layout_marginStart="20dp"
					android:layout_toStartOf="@+id/switch_btn"
					android:layout_toEndOf="@+id/imagem_biometric"
					android:text="Acessar com Biometria"
					android:textColor="@color/white"
					android:textSize="20dp"
					android:alpha="0.6"
					/>

				<com.airbnb.lottie.LottieAnimationView
					android:id="@+id/switch_btn"
					android:contentDescription="botão switch lottie utilizado para habilitar ou desabilitar biometria"
					android:layout_width="80dp"
					android:layout_height="wrap_content"
					android:layout_alignParentEnd="true"
					android:layout_marginEnd="0dp"
					app:lottie_rawRes="@raw/switch_button" />

			</RelativeLayout>

			<RelativeLayout
