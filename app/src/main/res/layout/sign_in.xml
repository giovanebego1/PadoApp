				<RelativeLayout
                    android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="70dp"
					android:layout_marginTop="7dp">

					<View
                        android:layout_width="60dp"
						android:layout_height="60dp"
						android:layout_marginStart="0dp"
						android:layout_marginTop="0dp"
						android:background="@drawable/ellipse_16_shape"
						android:clickable="true"
						android:focusable="true"
						tools:ignore="SpeakableTextPresentCheck" />

					<ImageView
						android:id="@+id/btn_face"
						android:layout_width="40dp"
						android:layout_height="40dp"
						android:layout_marginStart="10dp"
						android:layout_marginTop="10dp"
						android:contentDescription="facebook_logo_blue_circle_large_transparent_png_2"
						android:src="@drawable/facebook_logo_blue_circle_large_transparent_png_2"
						tools:ignore="HardcodedText" />

				</RelativeLayout>


				<RelativeLayout
                    android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="142.66dp"
